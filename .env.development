# iMS Environment Configuration
# Development environment variables

# App Configuration
VITE_APP_NAME="iMS - Invoice Management System"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# Firebase Configuration (Replace with your Firebase project credentials)
VITE_FIREBASE_API_KEY="your-firebase-api-key"
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
VITE_FIREBASE_DATABASE_URL="https://your-project-default-rtdb.firebaseio.com/"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="123456789"
VITE_FIREBASE_APP_ID="1:123456789:web:abcdef123456"
VITE_FIREBASE_MEASUREMENT_ID="G-ABCDEF1234"

# API Configuration
VITE_API_BASE_URL="http://localhost:3001"
VITE_API_TIMEOUT="30000"

# Offline Engine Configuration
VITE_OFFLINE_ENABLED="true"
VITE_SYNC_INTERVAL="30000"
VITE_CACHE_DURATION="86400000"

# ZATCA Configuration
VITE_ZATCA_ENABLED="true"
VITE_ZATCA_ENVIRONMENT="sandbox"
VITE_ZATCA_API_URL="https://gw-fatoora-sandbox.zatca.gov.sa"

# Development Configuration
VITE_USE_FIREBASE_EMULATOR="false"
VITE_ENABLE_DEV_TOOLS="true"
VITE_DEBUG_MODE="true"
